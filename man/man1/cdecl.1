enumeration  enum
       func  function
    integer  int
        mbr  member
        ptr  pointer
        ref  reference
 restricted  restrict
        ret  returning
  structure  struct
       type  typedef
    varargs  ...
   variadic  ...
     vector  array
.cE 0
